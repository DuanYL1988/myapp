<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.app.repository.FavoriteImageRepository" >
  <resultMap id="FavoriteImageResultMap" type="com.app.model.FavoriteImage" >
    <id column="ID" property="id" jdbcType="INTEGER" />
    <result column="image_path" property="imagePath" jdbcType="VARCHAR" />
  </resultMap>

  <sql id="FavoriteImage_Column_List" >
    ID, image_path
  </sql>
  
  <select id="findAllImage" resultMap="FavoriteImageResultMap" >
    select 
    <include refid="FavoriteImage_Column_List" />
    from favorite_image
  </select>

  <insert id="insert" parameterType="com.app.model.FavoriteImage" >
    insert into favorite_image (image_path,user,rank,create_time)
    values (#{imagePath}, #{user},#{rank},CURRENT_TIMESTAMP)
  </insert>
  
  <select id="findByPath"  resultMap="FavoriteImageResultMap" parameterType="String">
  	select <include refid="FavoriteImage_Column_List" />
    from favorite_image
    where image_path = #{path}
  </select>
  
</mapper>